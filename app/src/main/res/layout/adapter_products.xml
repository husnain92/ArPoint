<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/eq1"
            android:id="@+id/imgProduct"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/linearLayout2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgProduct"
            android:layout_toEndOf="@+id/imgProduct">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Title"
                android:textColor="#000000"
                android:textSize="19sp"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:id="@+id/tvProduct_Title"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/btnBuyProduct"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvProduct_Details"
                android:textSize="16sp"
                android:textColor="#000000"
                android:maxLines="3"
                android:paddingLeft="5dp"
                android:ellipsize="end"
                android:text="Product Details fedffsdfasdfsdf/ndsfasdfas/nweradfasdf/nafasdf/nasfasdf/nfsdafs/n\nw lines"
                android:layout_below="@+id/tvProduct_Title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/btnBuyProduct"
                android:layout_toStartOf="@+id/btnBuyProduct" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="BUY"
                android:background="@color/colorPrimaryDark"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/btnBuyProduct" />
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
